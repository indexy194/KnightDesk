<UserControl x:Class="KnightDesk.Presentation.WPF.Pages.ManagerPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:local="clr-namespace:KnightDesk.Presentation.WPF.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Transfer Panel-->
        <Border Style="{StaticResource border}" Margin="20 120 20 20">
            <StackPanel Margin="10 88 10 20">
                <!-- Account Management Header with Search -->
                <Grid Margin="0 10 0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="List Accounts" Style="{StaticResource textLabel}" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>

                    <!-- Search TextBox -->
                    <Border Grid.Column="1" 
                            Background="#2A2A2A" 
                            CornerRadius="15" 
                            Height="30" 
                            Width="200" 
                            Margin="20 0 5 0"
                            VerticalAlignment="Center">
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent" 
                                 Foreground="White" 
                                 BorderThickness="0" 
                                 Padding="10 0" 
                                 VerticalAlignment="Center"
                                 FontSize="11">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Foreground" Value="#888888"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Border>
                </Grid>

                <!-- Header Row -->
                <Grid Margin="0 5 0 5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="0.6*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Username" Style="{StaticResource textLabel}" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Margin="5 0"/>
                    <TextBlock Text="Ingame" Style="{StaticResource textLabel}" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Grid.Column="1" Margin="5 0"/>
                    <TextBlock Text="Status" Style="{StaticResource textLabel}" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Grid.Column="2" TextAlignment="Center"/>
                    <TextBlock Text="Game" Style="{StaticResource textLabel}" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Grid.Column="3" TextAlignment="Center"/>
                    <TextBlock Text="Favorite" Style="{StaticResource textLabel}" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Grid.Column="4" TextAlignment="Center"/>
                </Grid>

                <!-- Account List with ScrollViewer -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              MaxHeight="300">
                    <ItemsControl ItemsSource="{Binding FilteredAccounts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0 3 0 3" Background="#2A2A2A" Height="35">
                                    <Grid.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" 
                                                      Command="{Binding DataContext.SelectAccountCommand, RelativeSource={RelativeSource AncestorType=ScrollViewer}}"
                                                      CommandParameter="{Binding}"/>
                                    </Grid.InputBindings>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="1.2*"/>
                                        <ColumnDefinition Width="0.6*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="0.6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Username}" 
                                               Style="{StaticResource textLabel}" 
                                               VerticalAlignment="Center" 
                                               Margin="5 0" 
                                               FontSize="11"/>

                                    <TextBlock Text="{Binding CharacterName}" 
                                               Style="{StaticResource textLabel}" 
                                               VerticalAlignment="Center" 
                                               Margin="5 0" 
                                               FontSize="11" 
                                               Grid.Column="1"/>

                                    <fa:ImageAwesome Grid.Column="2"
                                                     Icon="Circle" 
                                                     Style="{StaticResource whiteIcon}" 
                                                     Width="12" 
                                                     Height="12" 
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Foreground="#F44336"/>

                                    <Button Grid.Column="3" 
                                            Style="{StaticResource button}" 
                                            Content="Start" 
                                            FontSize="10" 
                                            Height="30" 
                                            Margin="2" 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>

                                    <!-- Favorite Star Display Only -->
                                    <fa:ImageAwesome Grid.Column="4" 
                                                     Width="12" 
                                                     Height="12" 
                                                     HorizontalAlignment="Center" 
                                                     VerticalAlignment="Center"
                                                     Icon="Star"
                                                     Foreground="#FFD700"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <!--Bank Card-->
        <Border Style="{StaticResource cardBorder}" Margin="90 40 90 0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#D489FF" Offset="-0.2" />
                    <GradientStop Color="#7985FF" Offset="0.5" />
                    <GradientStop Color="#6AD8FD" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>

            <Grid>

                <!--new -->
                <Grid Margin="15 13">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Information" Foreground="#fcfcfc" FontSize="16" FontWeight="SemiBold" Grid.ColumnSpan="3" Margin="0 0 0 18"/>

                    <Button Style="{StaticResource button}" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.ColumnSpan="3">
                        <fa:ImageAwesome Icon="Edit" Style="{StaticResource whiteIcon}" Width="14" Height="12" />
                        <!-- can make simple icon here-->
                    </Button>

                    <fa:ImageAwesome Icon="MapMarker" Style="{StaticResource whiteIcon}" Grid.Row="1" VerticalAlignment="Top" />
                    <fa:ImageAwesome Icon="Folder" Style="{StaticResource whiteIcon}" Grid.Row="2" VerticalAlignment="Top" />

                    <TextBlock Text="Account :" Style="{StaticResource textLabel}" Grid.Column="1" Grid.Row="1" Margin="10 0 10 18" />
                    <TextBlock Text="Ingame :" Style="{StaticResource textLabel}" Grid.Column="1" Grid.Row="2" Margin="10 0 10 0" />

                    <TextBlock Text="{Binding SelectedAccount.Username}" Style="{StaticResource textLabel}" Grid.Column="2" Grid.Row="1" />
                    <TextBlock Text="{Binding SelectedAccount.CharacterName}" Style="{StaticResource textLabel}" Grid.Column="2" Grid.Row="2" />

                    <!---button fast login here-->
                    <Button Style="{StaticResource fillButton}"
                            Grid.Column="2"
                            Grid.Row="2"
                            Width="100"
                            VerticalAlignment="Bottom" 
                            Content="Start"/>
                    <Button Style="{StaticResource exitButton}"
                            Grid.Column="2"
                            Grid.Row="2"
                            Width="100"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom" 
                            Content="Exit"/>
                </Grid>

            </Grid>
        </Border>

        <!--Tool Controls Panel-->
        <StackPanel Grid.Column="1" Margin="0 0 20 0">

            <!-- Tool Controls Header -->
            <Border Style="{StaticResource border}" Margin="10 40 10 20">
                <StackPanel Margin="15">
                    <!-- Title -->
                    <TextBlock Text="Tool Controls" 
                               Style="{StaticResource textLabel}" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Margin="0 0 0 15"/>
                    <!-- Auto State -->
                    <Border Style="{StaticResource toolsBorder}"
                            Margin="0 10 0 0">
                        <Grid>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Auto State" 
                                       Style="{StaticResource textLabel}" 
                                       VerticalAlignment="Center" 
                                       FontSize="12"/>

                            <Button Grid.Column="1" 
                                    Style="{StaticResource toolButtons}"
                                    Height="25"
                                    Margin="5 0"
                                    FontWeight="Bold">
                                <TextBlock Text="ON" 
                                           Style="{StaticResource textLabel}" 
                                           VerticalAlignment="Center" 
                                           FontSize="8"/>
                            </Button>

                            <Button Grid.Column="2" 
                                    Style="{StaticResource toolButtons}"
                                    Height="25"
                                    Margin="5 0"
                                    FontWeight="Bold">
                                <TextBlock Text="OFF" 
                                           Style="{StaticResource textLabel}" 
                                           VerticalAlignment="Center" 
                                           FontSize="8"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Auto Event -->
                    <Border Style="{StaticResource toolsBorder}" 
                            Margin="0 10 0 0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Auto Event" 
                                           Style="{StaticResource textLabel}" 
                                           VerticalAlignment="Center" 
                                           FontSize="12"/>

                                <Button Grid.Column="1" 
                                    Style="{StaticResource toolButtons}"
                                    Height="25"
                                    Margin="5 0"
                                    FontWeight="Bold">
                                    <TextBlock Text="ON" 
                                           Style="{StaticResource textLabel}" 
                                           VerticalAlignment="Center" 
                                           FontSize="8"/>
                                </Button>

                                <Button Grid.Column="2" 
                                    Style="{StaticResource toolButtons}"
                                    Height="25"
                                    Margin="5 0"
                                    FontWeight="Bold">
                                    <TextBlock Text="OFF" 
                                           Style="{StaticResource textLabel}" 
                                           VerticalAlignment="Center" 
                                           FontSize="8"/>
                                </Button>
                            </Grid>

                            <ComboBox Grid.Row="1" 
                                      Margin="0 10 0 0" 
                                      Height="25" 
                                      Background="White" 
                                      BorderBrush="#E0E0E0">
                                <ComboBoxItem Content="Trung Thu" IsSelected="True"/>
                                <ComboBoxItem Content="Sát Thủ"/>
                                <ComboBoxItem Content="Heo"/>
                                <ComboBoxItem Content="Hỏa Kì Lân"/>
                            </ComboBox>
                        </Grid>
                    </Border>

                    <!-- Auto Equip -->
                    <Border Style="{StaticResource toolsBorder}"
                            Margin="0 10 0 0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Auto Equip" 
                                           Style="{StaticResource textLabel}" 
                                           VerticalAlignment="Center" 
                                           FontSize="12"/>
                                <Button Grid.Column="1" 
                                    Style="{StaticResource toolButtons}"
                                    Height="25"
                                    Margin="5 0"
                                    FontWeight="Bold">
                                    <TextBlock Text="ON" 
                                           Style="{StaticResource textLabel}" 
                                           VerticalAlignment="Center" 
                                           FontSize="8"/>
                                </Button>

                                <Button Grid.Column="2" 
                                    Style="{StaticResource toolButtons}"
                                    Height="25"
                                    Margin="5 0"
                                    FontWeight="Bold">
                                    <TextBlock Text="OFF" 
                                           Style="{StaticResource textLabel}" 
                                           VerticalAlignment="Center" 
                                           FontSize="8"/>
                                </Button>
                            </Grid>

                            <ComboBox Grid.Row="1" 
                                      Margin="0 10 0 0" 
                                      Height="25" 
                                      Background="White" 
                                      BorderBrush="#E0E0E0">
                                <ComboBoxItem Content="Sát Thủ" IsSelected="True"/>
                                <ComboBoxItem Content="Trung Thu"/>
                                <ComboBoxItem Content="Heo"/>
                                <ComboBoxItem Content="Hỏa Kì Lân"/>
                            </ComboBox>
                        </Grid>
                    </Border>

                    <!-- Tên Focus -->
                    <Border Style="{StaticResource toolsBorder}" 
                            Margin="0 10 0 0">
                        <TextBlock Text="Tên Focus" 
                                   Style="{StaticResource textLabel}" 
                                   FontSize="12"/>
                    </Border>

                    <!-- Auto Mount -->
                    <Border Style="{StaticResource toolsBorder}"
                            Margin="0 10 0 0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Auto Mount" 
                                       Style="{StaticResource textLabel}" 
                                       FontSize="12" 
                                       Margin="0 0 0 10"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <ComboBox Margin="0 0 5 0" 
                                          Height="25" 
                                          Background="White" 
                                          BorderBrush="#E0E0E0">
                                    <ComboBoxItem Content="Heo" IsSelected="True"/>
                                    <ComboBoxItem Content="Sát Thủ"/>
                                    <ComboBoxItem Content="Trung Thu"/>
                                    <ComboBoxItem Content="Hỏa Kì Lân"/>
                                </ComboBox>

                                <ComboBox Grid.Column="1" 
                                          Margin="5 0 0 0" 
                                          Height="25" 
                                          Background="White" 
                                          BorderBrush="#E0E0E0">
                                    <ComboBoxItem Content="Hỏa Kì Lân" IsSelected="True"/>
                                    <ComboBoxItem Content="Sát Thủ"/>
                                    <ComboBoxItem Content="Trung Thu"/>
                                    <ComboBoxItem Content="Heo"/>
                                </ComboBox>
                            </Grid>

                            <Grid Grid.Row="2" Margin="0 10 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Content="Load" 
                                        Grid.Column="0"
                                        Style="{StaticResource loadButton}"/>
                                <Button Content="Load" 
                                        Grid.Column="1"
                                        Style="{StaticResource loadButton}"/>
                            </Grid>
                        </Grid>
                    </Border>

                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</UserControl>
