<UserControl x:Class="KnightDesk.Presentation.WPF.Pages.ManagerPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:local="clr-namespace:KnightDesk.Presentation.WPF.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Transfer Panel-->
        <Border Style="{StaticResource border}" Margin="10 40 10 20">
            <StackPanel Margin="8 0 8 0">
                <!-- Account Management Header with Search -->
                <Grid Margin="0 10 0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!-- Search TextBox -->
                    <Border Grid.Column="1" 
                            Background="#2A2A2A" 
                            CornerRadius="15" 
                            Height="30" 
                            Width="200" 
                            Margin="20 0 5 0"
                            VerticalAlignment="Center">
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent" 
                                 Foreground="White" 
                                 BorderThickness="0" 
                                 Padding="10 0" 
                                 VerticalAlignment="Center"
                                 FontSize="11">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Foreground" Value="#888888"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Border>
                </Grid>

                <!-- Header Row -->
                <Grid Margin="0 5 0 5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="0.8*"/>
                        <ColumnDefinition Width="0.8*"/>
                        <ColumnDefinition Width="0.6*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Username" Style="{StaticResource textLabel}" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Margin="5 0"/>
                    <TextBlock Text="Ingame" Style="{StaticResource textLabel}" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Grid.Column="1" Margin="5 0"/>
                    <TextBlock Text="Status" Style="{StaticResource textLabel}" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Grid.Column="2" TextAlignment="Center"/>
                    <TextBlock Text="Game" Style="{StaticResource textLabel}" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Grid.Column="3" TextAlignment="Center"/>
                    <TextBlock Text="Check" Style="{StaticResource textLabel}" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Grid.Column="4" TextAlignment="Center"/>
                    <TextBlock Text="Favorite" Style="{StaticResource textLabel}" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Grid.Column="5" TextAlignment="Center"/>
                </Grid>

                <!-- Account List with ScrollViewer -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              MaxHeight="300">
                    <ItemsControl ItemsSource="{Binding FilteredAccounts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0 3 0 3" Background="#2A2A2A" Height="35">
                                    <Grid.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" 
                                                      Command="{Binding DataContext.SelectAccountCommand, RelativeSource={RelativeSource AncestorType=ScrollViewer}}"
                                                      CommandParameter="{Binding}"/>
                                    </Grid.InputBindings>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.2*"/>
                                        <ColumnDefinition Width="1.2*"/>
                                        <ColumnDefinition Width="0.8*"/>
                                        <ColumnDefinition Width="0.8*"/>
                                        <ColumnDefinition Width="0.6*"/>
                                        <ColumnDefinition Width="0.6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Username}" 
                                               Style="{StaticResource textLabel}" 
                                               VerticalAlignment="Center" 
                                               Margin="5 0" 
                                               FontSize="11"/>

                                    <TextBlock Text="{Binding CharacterName}" 
                                               Style="{StaticResource textLabel}" 
                                               VerticalAlignment="Center" 
                                               Margin="5 0" 
                                               FontSize="11" 
                                               Grid.Column="1"/>

                                    <!-- Game Status Indicator -->
                                    <fa:ImageAwesome Grid.Column="2"
                                                     Width="12" 
                                                     Height="12" 
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center">
                                        <fa:ImageAwesome.Style>
                                            <Style TargetType="fa:ImageAwesome" BasedOn="{StaticResource whiteIcon}">
                                                <Setter Property="Icon" Value="Circle"/>
                                                <Setter Property="Foreground" Value="#F44336"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsGameRunning}" Value="True">
                                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </fa:ImageAwesome.Style>
                                    </fa:ImageAwesome>

                                    <!-- Start/Stop Game Button -->
                                    <Button Grid.Column="3" 
                                            Style="{StaticResource button}" 
                                            Content="{Binding StartStopButtonText}"
                                            Command="{Binding DataContext.StartStopGameCommand, RelativeSource={RelativeSource AncestorType=ScrollViewer}}"
                                            CommandParameter="{Binding}"
                                            FontSize="10" 
                                            Height="30" 
                                            Margin="2" 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>

                                    <!-- Check Game Connection Button (Eye Icon) -->
                                    <Button Grid.Column="4" 
                                            Style="{StaticResource button}" 
                                            Command="{Binding DataContext.CheckGameConnectionCommand, RelativeSource={RelativeSource AncestorType=ScrollViewer}}"
                                            CommandParameter="{Binding}"
                                            FontSize="10" 
                                            Height="30" 
                                            Margin="2" 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            IsEnabled="{Binding IsGameRunning}">
                                        <fa:ImageAwesome Icon="Eye" 
                                                         Width="12" 
                                                         Height="12" 
                                                         Foreground="White"/>
                                    </Button>

                                    <!-- Favorite Star Display Only -->
                                    <fa:ImageAwesome Grid.Column="5" 
                                                     Width="12" 
                                                     Height="12" 
                                                     HorizontalAlignment="Center" 
                                                     VerticalAlignment="Center"
                                                     Icon="Star"
                                                     Foreground="#FFD700"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Border>
        <!--Tool Controls Panel-->
        <StackPanel Grid.Column="1" Margin="0 0 15 0">

            <!-- Tool Controls Header -->
            <Border Style="{StaticResource border}" Margin="5 40 10 20">
                <StackPanel Margin="15" IsEnabled="{Binding HasRunningGames}">
                    <!-- Title -->
                    <TextBlock Text="Tool Controls" 
                               Style="{StaticResource textLabel}" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Margin="0 0 0 15"/>
                    
                    <!-- Connection Status -->
                    <TextBlock Text="{Binding ConnectionStatusText}"
                               FontSize="10" 
                               Margin="0 5 0 10">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource textLabel}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnectionStatusVisible}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <!-- Auto State -->
                    <Border Style="{StaticResource toolsBorder}"
                            Margin="0 10 0 0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Auto State" 
                                       Style="{StaticResource textLabel}" 
                                       VerticalAlignment="Center" 
                                       FontSize="12"/>

                            <!-- ON Button -->
                            <Button Grid.Column="1" 
                                    Content="ON"
                                    Width="35"
                                    Height="25"
                                    Margin="2 0"
                                    FontSize="9"
                                    Command="{Binding ToggleAutoStateCommand}"
                                    IsEnabled="{Binding CanUseAutoControls}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource toolButtons}">
                                        <Setter Property="Background" Value="#666666"/>
                                        <Setter Property="Opacity" Value="0.5"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedAccount.AutoSettings.AutoState}" Value="True">
                                                <Setter Property="Background" Value="#4CAF50"/>
                                                <Setter Property="Opacity" Value="1.0"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- OFF Button -->
                            <Button Grid.Column="2" 
                                    Content="OFF"
                                    Width="35"
                                    Height="25"
                                    Margin="2 0"
                                    FontSize="9"
                                    Command="{Binding ToggleAutoStateCommand}"
                                    IsEnabled="{Binding CanUseAutoControls}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource toolButtons}">
                                        <Setter Property="Background" Value="#F44336"/>
                                        <Setter Property="Opacity" Value="1.0"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedAccount.AutoSettings.AutoState}" Value="True">
                                                <Setter Property="Background" Value="#666666"/>
                                                <Setter Property="Opacity" Value="0.5"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Auto Event -->
                    <Border Style="{StaticResource toolsBorder}" 
                            Margin="0 10 0 0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Auto Event" 
                                           Style="{StaticResource textLabel}" 
                                           VerticalAlignment="Center" 
                                           FontSize="12"/>

                                <!-- ON Button -->
                                <Button Grid.Column="1" 
                                        Content="ON"
                                        Width="35"
                                        Height="25"
                                        Margin="2 0"
                                        FontSize="9"
                                        Command="{Binding ToggleAutoEventCommand}"
                                        IsEnabled="{Binding CanUseAutoControls}">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource toolButtons}">
                                            <Setter Property="Background" Value="#666666"/>
                                            <Setter Property="Opacity" Value="0.5"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedAccount.AutoSettings.AutoEvent}" Value="True">
                                                    <Setter Property="Background" Value="#4CAF50"/>
                                                    <Setter Property="Opacity" Value="1.0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!-- OFF Button -->
                                <Button Grid.Column="2" 
                                        Content="OFF"
                                        Width="35"
                                        Height="25"
                                        Margin="2 0"
                                        FontSize="9"
                                        Command="{Binding ToggleAutoEventCommand}"
                                        IsEnabled="{Binding CanUseAutoControls}">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource toolButtons}">
                                            <Setter Property="Background" Value="#F44336"/>
                                            <Setter Property="Opacity" Value="1.0"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedAccount.AutoSettings.AutoEvent}" Value="True">
                                                    <Setter Property="Background" Value="#666666"/>
                                                    <Setter Property="Opacity" Value="0.5"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>

                            <ComboBox Grid.Row="1" 
                                      Margin="0 10 0 0" 
                                      Height="25" 
                                      Background="White" 
                                      BorderBrush="#E0E0E0"
                                      ItemsSource="{Binding EventNames}"
                                      SelectedValue="{Binding SelectedAccount.AutoSettings.EventName}"
                                      IsEnabled="{Binding CanUseAutoControls}"/>
                        </Grid>
                    </Border>

                    <!-- Auto Equip -->
                    <Border Style="{StaticResource toolsBorder}"
                            Margin="0 10 0 0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Auto Equip" 
                                           Style="{StaticResource textLabel}"
                                           VerticalAlignment="Center" 
                                           FontSize="12"/>

                                <!-- ON Button -->
                                <Button Grid.Column="1" 
                                        Content="ON"
                                        Width="35"
                                        Height="25"
                                        Margin="2 0"
                                        FontSize="9"
                                        Command="{Binding ToggleAutoEquipCommand}"
                                        IsEnabled="{Binding CanUseAutoControls}">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource toolButtons}">
                                            <Setter Property="Background" Value="#666666"/>
                                            <Setter Property="Opacity" Value="0.5"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedAccount.AutoSettings.AutoEquip}" Value="True">
                                                    <Setter Property="Background" Value="#4CAF50"/>
                                                    <Setter Property="Opacity" Value="1.0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!-- OFF Button -->
                                <Button Grid.Column="2" 
                                        Content="OFF"
                                        Width="35"
                                        Height="25"
                                        Margin="2 0"
                                        FontSize="9"
                                        Command="{Binding ToggleAutoEquipCommand}"
                                        IsEnabled="{Binding CanUseAutoControls}">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource toolButtons}">
                                            <Setter Property="Background" Value="#F44336"/>
                                            <Setter Property="Opacity" Value="1.0"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedAccount.AutoSettings.AutoEquip}" Value="True">
                                                    <Setter Property="Background" Value="#666666"/>
                                                    <Setter Property="Opacity" Value="0.5"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>

                            <ComboBox Grid.Row="1" 
                                      Margin="0 10 0 0" 
                                      Height="25" 
                                      Background="White" 
                                      BorderBrush="#E0E0E0"
                                      ItemsSource="{Binding EquipTypeNames}"
                                      SelectedValue="{Binding SelectedAccount.AutoSettings.EquipTypeName}"
                                      IsEnabled="{Binding CanUseAutoControls}"/>
                        </Grid>
                    </Border>

                    <!-- Tên Focus -->
                    <Border Style="{StaticResource toolsBorder}" 
                            Margin="0 10 0 0">
                        <StackPanel>
                            <TextBlock Text="Tên Focus" 
                                       Style="{StaticResource textLabel}" 
                                       FontSize="12"
                                       Margin="0 0 0 10"/>
                            <TextBox Text="{Binding SelectedAccount.AutoSettings.NameFocus}"
                                     Height="25" 
                                     Background="White" 
                                     BorderBrush="#E0E0E0"
                                     Padding="5"
                                     IsEnabled="{Binding CanUseAutoControls}"/>
                        </StackPanel>
                    </Border>

                    <!-- Auto Mount -->
                    <Border Style="{StaticResource toolsBorder}"
                            Margin="0 10 0 0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Auto Mount" 
                                       Style="{StaticResource textLabel}" 
                                       FontSize="12" 
                                       Margin="0 0 0 10"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <ComboBox Margin="0 0 5 0" 
                                          Height="25" 
                                          Background="White" 
                                          BorderBrush="#E0E0E0"
                                          ItemsSource="{Binding MountTypeItems}"
                                          SelectedValue="{Binding SelectedAccount.AutoSettings.MountType}"
                                          SelectedValuePath="Value"
                                          DisplayMemberPath="Display"
                                          IsEnabled="{Binding CanUseAutoControls}"/>

                                <ComboBox Grid.Column="1" 
                                          Margin="5 0 0 0" 
                                          Height="25" 
                                          Background="White" 
                                          BorderBrush="#E0E0E0"
                                          ItemsSource="{Binding MountTypeItems}"
                                          SelectedValue="{Binding SelectedAccount.AutoSettings.MountType2}"
                                          SelectedValuePath="Value"
                                          DisplayMemberPath="Display"
                                          IsEnabled="{Binding CanUseAutoControls}"/>
                            </Grid>

                            <Grid Grid.Row="2" Margin="0 10 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Content="Load" 
                                        Grid.Column="0"
                                        Style="{StaticResource loadButton}"
                                        IsEnabled="{Binding CanUseAutoControls}"/>
                                <Button Content="Load" 
                                        Grid.Column="1"
                                        Style="{StaticResource loadButton}"
                                        IsEnabled="{Binding CanUseAutoControls}"/>
                            </Grid>
                        </Grid>
                    </Border>

                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</UserControl>
