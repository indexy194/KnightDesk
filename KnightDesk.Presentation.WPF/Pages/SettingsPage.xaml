<UserControl x:Class="KnightDesk.Presentation.WPF.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:local="clr-namespace:KnightDesk.Presentation.WPF.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <!-- Settings Panel -->
        <Border Style="{StaticResource border}" Margin="20">
            <StackPanel Margin="20">
                <!-- Header -->
                <TextBlock Text="Application Settings" 
                           Style="{StaticResource textLabel}" 
                           FontSize="20" 
                           FontWeight="SemiBold" 
                           Margin="0 10 0 15"/>

                <Border Style="{StaticResource toolsBorder}" Margin="0 10 0 20">
                    <StackPanel Margin="15">
                        <TextBlock Text="Path Configuration" 
                                   Style="{StaticResource textLabel}" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Margin="0 0 0 5"/>

                        <!-- Game Path -->
                        <Grid Margin="0 10 0 10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Game Installation Path" 
                                       Style="{StaticResource textLabel}" 
                                       FontSize="14" 
                                       Margin="0 0 0 5"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Text="{Binding GamePath, UpdateSourceTrigger=PropertyChanged}" 
                                         Height="35" 
                                         VerticalAlignment="Center"/>

                                <Button Grid.Column="1" 
                                        Style="{StaticResource fillButton}" 
                                        Width="80" 
                                        Height="35"
                                        Margin="10 0 0 0"
                                        Content="Browse"
                                        Command="{Binding BrowseGamePathCommand}"/>
                            </Grid>
                        </Grid>

                        <!-- Data Path -->
                        <Grid Margin="0 10 0 10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Log Game Path" 
                                       Style="{StaticResource textLabel}" 
                                       FontSize="14" 
                                       Margin="0 0 0 5"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Text="{Binding DataPath, UpdateSourceTrigger=PropertyChanged}" 
                                         Height="35" 
                                         VerticalAlignment="Center"/>

                                <Button Grid.Column="1" 
                                        Style="{StaticResource fillButton}" 
                                        Width="80" 
                                        Height="35"
                                        Margin="10 0 0 0"
                                        Content="Browse"
                                        IsEnabled="True"
                                        Command="{Binding BrowseDataPathCommand}"/>
                            </Grid>
                        </Grid>

                        <!-- Config Path -->
                        <Grid Margin="0 10 0 0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Coming SOON..." 
                                       Style="{StaticResource textLabel}" 
                                       FontSize="14" 
                                       Margin="0 0 0 5"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Text="{Binding ConfigPath, UpdateSourceTrigger=PropertyChanged}" 
                                         Height="35" 
                                         VerticalAlignment="Center"/>

                                <Button Grid.Column="1" 
                                        Style="{StaticResource fillButton}" 
                                        Width="80" 
                                        Height="35"
                                        Margin="10 0 0 0"
                                        Content="Browse"
                                        IsEnabled="False"
                                        Command="{Binding BrowseConfigPathCommand}"/>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </Border>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
                    <Button Content="Save Settings" 
                            Style="{StaticResource fillButton}" 
                            Width="120" 
                            Height="40"
                            Margin="0 0 15 0"
                            Command="{Binding SaveSettingsCommand}"/>
                    
                    <Button Content="Reset to Default" 
                            Style="{StaticResource button}" 
                            Width="120" 
                            Height="40"
                            Margin="15 0 0 0"
                            Command="{Binding ResetSettingsCommand}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
