<UserControl x:Class="KnightDesk.Presentation.WPF.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:local="clr-namespace:KnightDesk.Presentation.WPF.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <!-- Settings Panel -->
        <Border Style="{StaticResource border}" Margin="20">
            <StackPanel Margin="20">
                <!-- Header -->
                <TextBlock Text="Application Settings" 
                           Style="{StaticResource textLabel}" 
                           FontSize="20" 
                           FontWeight="SemiBold" 
                           Margin="0 10 0 30"/>

                <!-- Auto Login Section -->
                <Border Style="{StaticResource toolsBorder}" Margin="0 10 0 20">
                    <StackPanel Margin="15">
                        <TextBlock Text="Authentication Settings" 
                                   Style="{StaticResource textLabel}" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Margin="0 0 0 15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Remember Login (Auto-login next time)" 
                                       Style="{StaticResource textLabel}" 
                                       FontSize="14" 
                                       VerticalAlignment="Center"/>

                            <CheckBox Grid.Column="1" 
                                      IsChecked="{Binding RememberLogin}" 
                                      VerticalAlignment="Center"
                                      Margin="10 0 0 0"/>
                        </Grid>

                        <TextBlock Text="When enabled, you won't need to login again next time you start KnightDesk" 
                                   Style="{StaticResource textLabel}" 
                                   FontSize="10" 
                                   Opacity="0.7" 
                                   Margin="0 5 0 0"/>
                    </StackPanel>
                </Border>

                <!-- Path Configuration Section -->
                <Border Style="{StaticResource toolsBorder}" Margin="0 10 0 20">
                    <StackPanel Margin="15">
                        <TextBlock Text="Path Configuration" 
                                   Style="{StaticResource textLabel}" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Margin="0 0 0 15"/>

                        <!-- Game Path -->
                        <Grid Margin="0 10 0 15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Game Installation Path" 
                                       Style="{StaticResource textLabel}" 
                                       FontSize="14" 
                                       Margin="0 0 0 5"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Text="{Binding GamePath, UpdateSourceTrigger=PropertyChanged}" 
                                         Height="35" 
                                         Padding="10 0" 
                                         VerticalAlignment="Center"/>

                                <Button Grid.Column="1" 
                                        Style="{StaticResource fillButton}" 
                                        Width="80" 
                                        Height="35"
                                        Margin="10 0 0 0"
                                        Content="Browse"
                                        Command="{Binding BrowseGamePathCommand}"/>
                            </Grid>
                        </Grid>

                        <!-- Data Path -->
                        <Grid Margin="0 10 0 15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Data Storage Path" 
                                       Style="{StaticResource textLabel}" 
                                       FontSize="14" 
                                       Margin="0 0 0 5"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Text="{Binding DataPath, UpdateSourceTrigger=PropertyChanged}" 
                                         Height="35" 
                                         Padding="10 0" 
                                         VerticalAlignment="Center"/>

                                <Button Grid.Column="1" 
                                        Style="{StaticResource fillButton}" 
                                        Width="80" 
                                        Height="35"
                                        Margin="10 0 0 0"
                                        Content="Browse"
                                        Command="{Binding BrowseDataPathCommand}"/>
                            </Grid>
                        </Grid>

                        <!-- Config Path -->
                        <Grid Margin="0 10 0 0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Configuration Files Path" 
                                       Style="{StaticResource textLabel}" 
                                       FontSize="14" 
                                       Margin="0 0 0 5"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Text="{Binding ConfigPath, UpdateSourceTrigger=PropertyChanged}" 
                                         Height="35" 
                                         Padding="10 0" 
                                         VerticalAlignment="Center"/>

                                <Button Grid.Column="1" 
                                        Style="{StaticResource fillButton}" 
                                        Width="80" 
                                        Height="35"
                                        Margin="10 0 0 0"
                                        Content="Browse"
                                        Command="{Binding BrowseConfigPathCommand}"/>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Application Settings Section -->
                <Border Style="{StaticResource toolsBorder}" Margin="0 10 0 20">
                    <StackPanel Margin="15">
                        <TextBlock Text="Application Settings" 
                                   Style="{StaticResource textLabel}" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Margin="0 0 0 15"/>

                        <!-- Auto Start -->
                        <Grid Margin="0 10 0 15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Start with Windows" 
                                       Style="{StaticResource textLabel}" 
                                       FontSize="14" 
                                       VerticalAlignment="Center"/>

                            <CheckBox Grid.Column="1" 
                                      IsChecked="{Binding StartWithWindows}" 
                                      VerticalAlignment="Center"
                                      Margin="10 0 0 0"/>
                        </Grid>

                        <!-- Minimize to Tray -->
                        <Grid Margin="0 10 0 15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Minimize to System Tray" 
                                       Style="{StaticResource textLabel}" 
                                       FontSize="14" 
                                       VerticalAlignment="Center"/>

                            <CheckBox Grid.Column="1" 
                                      IsChecked="{Binding MinimizeToTray}" 
                                      VerticalAlignment="Center"
                                      Margin="10 0 0 0"/>
                        </Grid>

                        <!-- Auto Update -->
                        <Grid Margin="0 10 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Check for Updates Automatically" 
                                       Style="{StaticResource textLabel}" 
                                       FontSize="14" 
                                       VerticalAlignment="Center"/>

                            <CheckBox Grid.Column="1" 
                                      IsChecked="{Binding AutoUpdate}" 
                                      VerticalAlignment="Center"
                                      Margin="10 0 0 0"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 30 0 0">
                    <Button Content="Save Settings" 
                            Style="{StaticResource fillButton}" 
                            Width="120" 
                            Height="40"
                            Margin="0 0 15 0"
                            Command="{Binding SaveSettingsCommand}"/>
                    
                    <Button Content="Reset to Default" 
                            Style="{StaticResource button}" 
                            Width="120" 
                            Height="40"
                            Margin="15 0 0 0"
                            Command="{Binding ResetSettingsCommand}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
