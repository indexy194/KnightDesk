<Window x:Class="KnightDesk.Presentation.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:KnightDesk.Presentation.WPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Title="MainWindow" Height="600" Width="1200">
    <Grid>
        <!--Grid Background-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border CornerRadius="25 0 0 25" Width="220">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#343155" Offset="0" />
                        <GradientStop Color="#3B2E58" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <Border CornerRadius="0 25 25 0" MouseDown="Border_MouseDown" Grid.Column="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#3E3A65" Offset="0" />
                        <GradientStop Color="#473765" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </Grid>

        <!--Grid Controls-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Main Menu-->
            <StackPanel Width="240">
                <StackPanel Orientation="Horizontal" Margin="0 50 20 40" HorizontalAlignment="Center">
                    <fa:ImageAwesome Icon="CheckCircle" Foreground="White" Width="30"/>
                    <!-- Change to Icon-->
                    <TextBlock Text="KnightDesk" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="10 0 0 0" Foreground="#FFFFFF"/>
                </StackPanel>

                <Button Style="{StaticResource activeMenuButton}">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <fa:ImageAwesome Icon="FolderOutline" Style="{StaticResource buttonIcon}" />
                            <TextBlock Text="Manager" Style="{StaticResource buttonText}" />
                        </StackPanel>
                        <fa:ImageAwesome Icon="AngleRight" HorizontalAlignment="Right" Visibility="Visible" Style="{StaticResource buttonIconExpand}" />
                    </Grid>
                </Button>

                <Button Style="{StaticResource menuButton}">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <fa:ImageAwesome Icon="BellOutline" Style="{StaticResource buttonIcon}" />
                            <TextBlock Text="Notifications" Style="{StaticResource buttonText}" />
                        </StackPanel>
                        <fa:ImageAwesome Name="sal" Icon="AngleRight" HorizontalAlignment="Right" Style="{StaticResource buttonIconExpand}" />
                    </Grid>
                </Button>

                <Button Style="{StaticResource menuButton}">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <fa:ImageAwesome Icon="Money" Style="{StaticResource buttonIcon}" />
                            <TextBlock Text="Deposit" Style="{StaticResource buttonText}" />
                        </StackPanel>
                        <fa:ImageAwesome Icon="AngleRight" HorizontalAlignment="Right" Style="{StaticResource buttonIconExpand}" />
                    </Grid>
                </Button>

                <Button Style="{StaticResource menuButton}">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <fa:ImageAwesome Icon="Clone" Style="{StaticResource buttonIcon}" />
                            <TextBlock Text="Records" Style="{StaticResource buttonText}" />
                        </StackPanel>
                        <fa:ImageAwesome Icon="AngleRight" HorizontalAlignment="Right" Style="{StaticResource buttonIconExpand}" />
                    </Grid>
                </Button>

                <Button Style="{StaticResource menuButton}">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <fa:ImageAwesome Icon="CommentOutline" Style="{StaticResource buttonIcon}" />
                            <TextBlock Text="Messages" Style="{StaticResource buttonText}" />
                        </StackPanel>
                        <fa:ImageAwesome Icon="AngleRight" HorizontalAlignment="Right" Style="{StaticResource buttonIconExpand}" />
                    </Grid>
                </Button>

                <Button Style="{StaticResource menuButton}">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <fa:ImageAwesome Icon="Television" Style="{StaticResource buttonIcon}" />
                            <TextBlock Text="Monitoring" Style="{StaticResource buttonText}" />
                        </StackPanel>
                        <fa:ImageAwesome Icon="AngleRight" HorizontalAlignment="Right" Style="{StaticResource buttonIconExpand}" />
                    </Grid>
                </Button>

                <Button Style="{StaticResource menuButton}">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <fa:ImageAwesome Icon="CreditCard" Style="{StaticResource buttonIcon}" />
                            <TextBlock Text="My Cards" Style="{StaticResource buttonText}" />
                        </StackPanel>
                        <fa:ImageAwesome Icon="AngleRight" HorizontalAlignment="Right" Style="{StaticResource buttonIconExpand}" />
                    </Grid>
                </Button>

                <Separator Background="#e0e0e0" Opacity="0.5" Margin="50 15 60 15"/>

                <Button Style="{StaticResource menuButton}">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <fa:ImageAwesome Icon="FolderOutlinepenOutline" Style="{StaticResource buttonIcon}" />
                            <TextBlock Text="Accounts" Style="{StaticResource buttonText}" />
                        </StackPanel>
                        <fa:ImageAwesome Icon="AngleRight" HorizontalAlignment="Right" Style="{StaticResource buttonIconExpand}" />
                    </Grid>
                </Button>

                <Button Style="{StaticResource menuButton}">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <fa:ImageAwesome Icon="CircleOutlineNotch" Style="{StaticResource buttonIcon}" />
                            <TextBlock Text="Logout" Style="{StaticResource buttonText}" />
                        </StackPanel>
                        <fa:ImageAwesome Icon="AngleRight" HorizontalAlignment="Right" Style="{StaticResource buttonIconExpand}" />
                    </Grid>
                </Button>
            </StackPanel>

            <!--Transaction Panel-->
            <Grid Grid.Column="1">
                <!--Transfer Panel-->
                <Border Style="{StaticResource border}" Margin="20 120 20 20">
                    <StackPanel Margin="10 88 10 20">
                        <!-- Account Management Header with Search -->
                        <Grid Margin="0 10 0 10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="Account Management" Style="{StaticResource textLabel}" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            
                            <!-- Search TextBox -->
                            <Border Grid.Column="1" 
                                    Background="#2A2A2A" 
                                    CornerRadius="15" 
                                    Height="30" 
                                    Width="200" 
                                    Margin="20 0 5 0"
                                    VerticalAlignment="Center">
                                <TextBox Background="Transparent" 
                                         Foreground="White" 
                                         BorderThickness="0" 
                                         Padding="10 0" 
                                         VerticalAlignment="Center"
                                         FontSize="11">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Foreground" Value="#888888"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </Border>
                            
                            <!-- Search Button -->
                            <Button Grid.Column="2" 
                                    Style="{StaticResource topMenuButton}" 
                                    Width="30"
                                    Height="30"
                                    VerticalAlignment="Center">
                                <fa:ImageAwesome Icon="Search" 
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"
                                                 Style="{StaticResource whiteIcon}"
                                                 Width="10"
                                                 Height="10"/>
                            </Button>
                        </Grid>

                        <!-- Header Row -->
                        <Grid Margin="0 5 0 5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="0.6*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0.6*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Username" Style="{StaticResource textLabel}" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Margin="5 0"/>
                            <TextBlock Text="Ingame" Style="{StaticResource textLabel}" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Grid.Column="1" Margin="5 0"/>
                            <TextBlock Text="Status" Style="{StaticResource textLabel}" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Grid.Column="2" TextAlignment="Center"/>
                            <TextBlock Text="Game" Style="{StaticResource textLabel}" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Grid.Column="3" TextAlignment="Center"/>
                            <TextBlock Text="Favorite" Style="{StaticResource textLabel}" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Grid.Column="4" TextAlignment="Center"/>
                        </Grid>

                        <!-- Account Row 1 -->
                        <Grid Margin="0 3 0 3" Background="#2A2A2A" Height="35">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="0.6*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0.6*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="player123@gmail.com" Style="{StaticResource textLabel}" VerticalAlignment="Center" Margin="5 0" FontSize="11"/>
                            
                            <TextBlock Text="Knight123" Style="{StaticResource textLabel}" VerticalAlignment="Center" Margin="5 0" FontSize="11" Grid.Column="1"/>

                            <fa:ImageAwesome Grid.Column="2"
                                             Icon="Circle" 
                                             Style="{StaticResource whiteIcon}" 
                                             Width="12" 
                                             Height="12" 
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             Foreground="#F44336"/>

                            <Button Grid.Column="3" Style="{StaticResource button}" Content="Start" FontSize="10" Height="30" Margin="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                            <Button Grid.Column="4" 
                                    Style="{StaticResource button}" 
                                    Width="30" 
                                    Height="30" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                                <fa:ImageAwesome Icon="StarOutline" Style="{StaticResource whiteIcon}" Width="8" Height="8" Foreground="#888888"/>
                                <!-- not favorite -->
                            </Button>
                        </Grid>

                        <!-- Account Row 2 -->
                        <Grid Margin="0 3 0 3" Background="#2A2A2A" Height="35">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="0.6*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0.6*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="gamer456@outlook.com" Style="{StaticResource textLabel}" VerticalAlignment="Center" Margin="5 0" FontSize="11"/>
                            
                            <TextBlock Text="ProGamer" Style="{StaticResource textLabel}" VerticalAlignment="Center" Margin="5 0" FontSize="11" Grid.Column="1"/>

                            <fa:ImageAwesome Grid.Column="2"
                                             Icon="Circle" 
                                             Style="{StaticResource whiteIcon}" 
                                             Width="12" 
                                             Height="12" 
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             Foreground="#F44336"/>

                            <Button Grid.Column="3" 
                                    Style="{StaticResource button}" 
                                    Content="Start" 
                                    FontSize="10" 
                                    Height="30" 
                                    Margin="2" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>

                            <Button Grid.Column="4" 
                                    Style="{StaticResource button}" 
                                    Width="30" 
                                    Height="30" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                                <fa:ImageAwesome Icon="StarOutline" Style="{StaticResource whiteIcon}" Width="8" Height="8" Foreground="#888888"/>
                                <!-- not favorite -->
                            </Button>
                        </Grid>

                        <!-- Account Row 3 -->
                        <Grid Margin="0 3 0 3" Background="#2A2A2A" Height="35">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="0.6*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0.6*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="prouser789@yahoo.com" Style="{StaticResource textLabel}" VerticalAlignment="Center" Margin="5 0" FontSize="11"/>
                            
                            <TextBlock Text="ElitePlayer" Style="{StaticResource textLabel}" VerticalAlignment="Center" Margin="5 0" FontSize="11" Grid.Column="1"/>

                            <fa:ImageAwesome Grid.Column="2" 
                                             Icon="Circle" 
                                             Style="{StaticResource whiteIcon}" 
                                             Width="12" 
                                             Height="12" 
                                             Foreground="#4CAF50" 
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                             
                            <Button Grid.Column="3" 
                                    Style="{StaticResource button}" 
                                    Content="Start" 
                                    FontSize="10" 
                                    Height="30" 
                                    Margin="2" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>

                            <Button Grid.Column="4" Style="{StaticResource button}" Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <fa:ImageAwesome Icon="Star" Style="{StaticResource whiteIcon}" Width="8" Height="8" Foreground="#FFD700"/>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>

                <!--Bank Card-->
                <Border Style="{StaticResource cardBorder}" Margin="90 40 90 0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#D489FF" Offset="-0.2" />
                            <GradientStop Color="#7985FF" Offset="0.5" />
                            <GradientStop Color="#6AD8FD" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>

                        <!--new -->
                        <Grid Margin="15 13">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Information" Foreground="#fcfcfc" FontSize="16" FontWeight="SemiBold" Grid.ColumnSpan="3" Margin="0 0 0 18"/>

                            <Button Style="{StaticResource button}" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.ColumnSpan="3">
                                <fa:ImageAwesome Icon="Edit" Style="{StaticResource whiteIcon}" Width="14" Height="12" /> <!-- can make simple icon here-->
                            </Button>

                            <fa:ImageAwesome Icon="MapMarker" Style="{StaticResource whiteIcon}" Grid.Row="1" VerticalAlignment="Top" />
                            <fa:ImageAwesome Icon="Folder" Style="{StaticResource whiteIcon}" Grid.Row="2" VerticalAlignment="Top" />

                            <TextBlock Text="Account :" Style="{StaticResource textLabel}" Grid.Column="1" Grid.Row="1" Margin="10 0 10 18" />
                            <TextBlock Text="Ingame :" Style="{StaticResource textLabel}" Grid.Column="1" Grid.Row="2" Margin="10 0 10 0" />

                            <TextBlock Text="test@gmail.com" Style="{StaticResource textLabel}" Grid.Column="2" Grid.Row="1" />
                            <TextBlock Text="tester" Style="{StaticResource textLabel}" Grid.Column="2" Grid.Row="2" />

                            <!---button fast login here-->
                            <Button Style="{StaticResource fillButton}"
                                    Grid.Column="2"
                                    Grid.Row="2"
                                    Width="100"
                                    VerticalAlignment="Bottom" 
                                    Content="Login"/>
                            <Button Style="{StaticResource exitButton}"
                                    Grid.Column="2"
                                    Grid.Row="2"
                                    Width="100"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom" 
                                    Content="Exit"/>
                        </Grid>
                        
                    </Grid>
                </Border>
            </Grid>

            <!--Tool Controls Panel-->
            <StackPanel Grid.Column="2" Margin="0 0 20 0">

                <!-- Tool Controls Header -->
                <Border Style="{StaticResource border}" Margin="10 40 10 20">
                    <StackPanel Margin="15">
                        <!-- Title -->
                        <TextBlock Text="Tool Controls" 
                                   Style="{StaticResource textLabel}" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Margin="0 0 0 15"/>
                        <!-- Auto State -->
                        <Border Style="{StaticResource toolsBorder}"
                                Margin="0 10 0 0">
                            <Grid>
                                
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="Auto State" 
                                           Style="{StaticResource textLabel}" 
                                           VerticalAlignment="Center" 
                                           FontSize="12"/>

                                <Button Grid.Column="1" 
                                        Style="{StaticResource toolButtons}"
                                        Height="25"
                                        Margin="5 0"
                                        FontWeight="Bold">
                                    <TextBlock Text="ON" 
                                               Style="{StaticResource textLabel}" 
                                               VerticalAlignment="Center" 
                                               FontSize="8"/>
                                </Button>

                                <Button Grid.Column="2" 
                                        Style="{StaticResource toolButtons}"
                                        Height="25"
                                        Margin="5 0"
                                        FontWeight="Bold">
                                    <TextBlock Text="OFF" 
                                               Style="{StaticResource textLabel}" 
                                               VerticalAlignment="Center" 
                                               FontSize="8"/>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Auto Event -->
                        <Border Style="{StaticResource toolsBorder}" 
                                Margin="0 10 0 0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="Auto Event" 
                                               Style="{StaticResource textLabel}" 
                                               VerticalAlignment="Center" 
                                               FontSize="12"/>

                                    <Button Grid.Column="1" 
                                        Style="{StaticResource toolButtons}"
                                        Height="25"
                                        Margin="5 0"
                                        FontWeight="Bold">
                                        <TextBlock Text="ON" 
                                               Style="{StaticResource textLabel}" 
                                               VerticalAlignment="Center" 
                                               FontSize="8"/>
                                    </Button>

                                    <Button Grid.Column="2" 
                                        Style="{StaticResource toolButtons}"
                                        Height="25"
                                        Margin="5 0"
                                        FontWeight="Bold">
                                        <TextBlock Text="OFF" 
                                               Style="{StaticResource textLabel}" 
                                               VerticalAlignment="Center" 
                                               FontSize="8"/>
                                    </Button>
                                </Grid>
                                
                                <ComboBox Grid.Row="1" 
                                          Margin="0 10 0 0" 
                                          Height="25" 
                                          Background="White" 
                                          BorderBrush="#E0E0E0">
                                    <ComboBoxItem Content="Trung Thu" IsSelected="True"/>
                                    <ComboBoxItem Content="Sát Thủ"/>
                                    <ComboBoxItem Content="Heo"/>
                                    <ComboBoxItem Content="Hỏa Kì Lân"/>
                                </ComboBox>
                            </Grid>
                        </Border>

                        <!-- Auto Equip -->
                        <Border Style="{StaticResource toolsBorder}"
                                Margin="0 10 0 0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="Auto Equip" 
                                               Style="{StaticResource textLabel}" 
                                               VerticalAlignment="Center" 
                                               FontSize="12"/>
                                    <Button Grid.Column="1" 
                                        Style="{StaticResource toolButtons}"
                                        Height="25"
                                        Margin="5 0"
                                        FontWeight="Bold">
                                        <TextBlock Text="ON" 
                                               Style="{StaticResource textLabel}" 
                                               VerticalAlignment="Center" 
                                               FontSize="8"/>
                                    </Button>

                                    <Button Grid.Column="2" 
                                        Style="{StaticResource toolButtons}"
                                        Height="25"
                                        Margin="5 0"
                                        FontWeight="Bold">
                                        <TextBlock Text="OFF" 
                                               Style="{StaticResource textLabel}" 
                                               VerticalAlignment="Center" 
                                               FontSize="8"/>
                                    </Button>
                                </Grid>
                                
                                <ComboBox Grid.Row="1" 
                                          Margin="0 10 0 0" 
                                          Height="25" 
                                          Background="White" 
                                          BorderBrush="#E0E0E0">
                                    <ComboBoxItem Content="Sát Thủ" IsSelected="True"/>
                                    <ComboBoxItem Content="Trung Thu"/>
                                    <ComboBoxItem Content="Heo"/>
                                    <ComboBoxItem Content="Hỏa Kì Lân"/>
                                </ComboBox>
                            </Grid>
                        </Border>

                        <!-- Tên Focus -->
                        <Border Style="{StaticResource toolsBorder}" 
                                Margin="0 10 0 0">
                            <TextBlock Text="Tên Focus" 
                                       Style="{StaticResource textLabel}" 
                                       FontSize="12"/>
                        </Border>

                        <!-- Auto Mount -->
                        <Border Style="{StaticResource toolsBorder}"
                                Margin="0 10 0 0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Text="Auto Mount" 
                                           Style="{StaticResource textLabel}" 
                                           FontSize="12" 
                                           Margin="0 0 0 10"/>
                                
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <ComboBox Margin="0 0 5 0" 
                                              Height="25" 
                                              Background="White" 
                                              BorderBrush="#E0E0E0">
                                        <ComboBoxItem Content="Heo" IsSelected="True"/>
                                        <ComboBoxItem Content="Sát Thủ"/>
                                        <ComboBoxItem Content="Trung Thu"/>
                                        <ComboBoxItem Content="Hỏa Kì Lân"/>
                                    </ComboBox>
                                    
                                    <ComboBox Grid.Column="1" 
                                              Margin="5 0 0 0" 
                                              Height="25" 
                                              Background="White" 
                                              BorderBrush="#E0E0E0">
                                        <ComboBoxItem Content="Hỏa Kì Lân" IsSelected="True"/>
                                        <ComboBoxItem Content="Sát Thủ"/>
                                        <ComboBoxItem Content="Trung Thu"/>
                                        <ComboBoxItem Content="Heo"/>
                                    </ComboBox>
                                </Grid>
                                
                                <Grid Grid.Row="2" Margin="0 10 0 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Button Content="Load" 
                                            Grid.Column="0"
                                            Style="{StaticResource loadButton}"/>
                                    <Button Content="Load" 
                                            Grid.Column="1"
                                            Style="{StaticResource loadButton}"/>
                                </Grid>
                            </Grid>
                        </Border>
                        
                    </StackPanel>
                </Border>

            </StackPanel>

        </Grid>
    </Grid>
</Window>
